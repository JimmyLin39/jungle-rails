<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Reviews</dt>
          <dd></dd>
          <% @product.reviews.each do |review|  %>
          <dt>
            user <%= review.user_id %>:
          </dt>
          <dd>
            <%= review.description %>
          </dd>
          <dd>
            <b>rating:</b>
            <%= review.rating %>
          </dd>
          <% end %>
          <br>
          <dd>
          <%= form_for([@product, @review]) do |f| %>
            <div class="field">
              <%= f.label :rating %><br>
              <%= f.text_field :rating %>
            </div>
            <div class="field">
              <%= f.label :description %><br>
              <%= f.text_field :description %>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
          <% end %>
          </dd>


        </dl>
      </div>

    </div>

  </article>

</section>
